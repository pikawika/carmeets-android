<?xml version="1.0" encoding="utf-8"?>
<!-- een partial view voor de notificatiebel met aantal -->
<!-- Special thanks to AndrewS and Pang for the base document: https://stackoverflow.com/questions/17696486/actionbar-notification-count-icon-badge-like-google-has -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        style="@android:style/Widget.ActionButton"

        android:layout_width="wrap_content"
        android:layout_height="fill_parent"

        android:layout_gravity="center"
        android:gravity="center"

        android:clickable="true"
        android:background="@android:color/transparent"

        android:orientation="vertical"
        android:focusable="true"
>

    <!-- de bel -->
    <ImageView
            android:id="@+id/image_partial_notification_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_notifications_white_24dp"
            android:gravity="center"
            android:clickable="true"

            android:layout_margin="0dp"
            android:contentDescription="@string/ab_notifications"
            android:focusable="true"
    />

    <!-- het aantal -->
    <TextView
            android:id="@+id/text_partial_notification_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="17sp"

            tools:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"

            android:background="@drawable/ic_chat_bubble_white_16dp"
            android:gravity="center"
            android:clickable="true"

            android:layout_marginStart="18dp"
            android:paddingBottom="5dp"
            android:focusable="true"
    />

</RelativeLayout>