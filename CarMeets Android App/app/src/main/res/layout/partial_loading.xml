<?xml version="1.0" encoding="utf-8"?>
<!-- Partial voor aan te geven dat de app iets aan het laden is -->
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
                name="isVisible"
                type="boolean"/>

    </data>

    <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{isVisible}"
    >

        <!-- Virtual divider horizontal 50% -->
        <android.support.constraint.Guideline
                android:id="@+id/guideline_partial_loading_with_show_cache_50percent_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"
        />

        <!-- Virtual divider vertical 10% -->
        <android.support.constraint.Guideline
                android:id="@+id/guideline_partial_loading_with_show_cache_10percent_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.10"
        />

        <!-- Virtual divider vertical 90% -->
        <android.support.constraint.Guideline
                android:id="@+id/guideline_partial_loading_with_show_cache_90percent_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.90"
        />

        <!-- Logo -->
        <ImageView
                android:id="@+id/img_partial_loading"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintDimensionRatio="WH,1:1"
                android:scaleType="fitCenter"
                android:src="@{`loading_animation_carmeets_3e157a5f-56dc-4017-85ce-ee679d3e0967`}"
                tools:src="@drawable/loading"
                android:tint="@color/colorPrimary"
                android:contentDescription="@string/alt_logo"

                app:layout_constraintEnd_toStartOf="@+id/guideline_partial_loading_with_show_cache_90percent_vertical"
                app:layout_constraintStart_toStartOf="@+id/guideline_partial_loading_with_show_cache_10percent_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline_partial_loading_with_show_cache_50percent_horizontal"
        />

        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintEnd_toStartOf="@+id/guideline_partial_loading_with_show_cache_90percent_vertical"
                app:layout_constraintStart_toStartOf="@+id/guideline_partial_loading_with_show_cache_10percent_vertical"
                app:layout_constraintTop_toBottomOf="@id/guideline_partial_loading_with_show_cache_50percent_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
        >

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="10dp"
            >


                <!-- Bezig met laden titel -->
                <TextView
                        android:id="@+id/text_partial_loading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:text="@string/txt_loading"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />

                <!-- Bezig met laden uitleg -->
                <TextView
                        android:id="@+id/text_partial_loading_why_it_takes_so_long"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:text="@string/txt_loading_why_it_takes_so_long"
                        android:textSize="16sp"
                        android:textAlignment="center"

                        app:layout_constraintTop_toBottomOf="@+id/text_partial_loading"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        android:layout_marginTop="20dp"
                />

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</layout>