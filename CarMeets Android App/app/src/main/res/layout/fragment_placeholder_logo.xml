<?xml version="1.0" encoding="utf-8"?>
<!-- een placeholder met logo en tekst over ontstaan -->
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

    <!-- logo -->
    <ImageView
            android:id="@+id/imageview_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintDimensionRatio="H,550:163"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logo"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_50percent_horizontal"

            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"/>

    <!-- scheidingslijn voor 50 50 -->
    <android.support.constraint.Guideline
            android:id="@+id/guideline_50percent_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <!-- Tekst over ontstaan -->
    <TextView
            android:id="@+id/text_placeholderlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/about_carmeets"
            android:textSize="15dp"
            android:textAlignment="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_50percent_horizontal"

            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"/>

</android.support.constraint.ConstraintLayout>