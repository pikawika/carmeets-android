<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment voor het tonen en bewerken van voorkeuren -->
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <!-- Virtuele scheidingslijn op 10% horizontaal -->
    <android.support.constraint.Guideline
            android:id="@+id/guideline_preferences_10percent_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"
    />

    <!-- Virtuele scheidingslijn op 90% horizontaal -->
    <android.support.constraint.Guideline
            android:id="@+id/guideline_preferences_account_90percent_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"
    />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_preferences_10percent_vertical"
            app:layout_constraintEnd_toEndOf="@id/guideline_preferences_account_90percent_vertical"
    >

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="10dp"
        >


            <!-- Titel -->
            <TextView
                    android:id="@+id/text_preferences_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/txt_preferences"
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    android:layout_marginBottom="8dp"
            />

            <!-- Startscherm instellen -->
            <Button
                    android:id="@+id/button_preferences_change_boot_page"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:textColor="@android:color/black"
                    android:text="@string/txt_preferences_change_boot_page"
                    android:background="@color/lightGrey"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_preferences_title"

                    android:layout_marginTop="16dp"
            />

            <!-- Startscherm instellen -->
            <Button
                    android:id="@+id/button_preferences_change_default_list_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:textColor="@android:color/black"
                    android:text="@string/txt_preferences_default_list_layout"
                    android:background="@color/lightGrey"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_preferences_change_boot_page"

                    android:layout_marginTop="16dp"
            />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>


