<?xml version="1.0" encoding="utf-8"?>
<!-- Data binding voorzien -->
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>

        <variable
                name="meetingViewModel"
                type="com.lennertbontinck.carmeetsandroidapp.viewmodels.MeetingViewModel"/>
    </data>

    <!-- Meeting detail voor portret -->
    <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

        <!-- de foto van de meeting -->
        <ImageView
                android:id="@+id/image_meetingdetail_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintDimensionRatio="H,16:9"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic"
                android:src="@{meetingViewModel.selectedMeeting.imageName}"
                android:contentDescription="@string/alt_item_meeting_img"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <!-- het liked en going icoon -->
        <android.support.constraint.ConstraintLayout
                android:id="@+id/partial_meetingdetail_likedgoing"
                android:layout_width="0px"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:background="@android:color/white"
                app:layout_constraintHorizontal_weight="1"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/partial_meetingdetail_date"
                app:layout_constraintStart_toStartOf="@+id/partial_meetingdetail_date"

                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_marginEnd="10dp">

            <!-- het liked icoon -->
            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image_meetingdetail_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_heart_black_24dp"
                    android:isToggledOn="@{safeUnbox(meetingViewModel.selectedMeeting.isUserLiked)}"

                    app:layout_constraintStart_toStartOf="parent"

                    android:layout_marginStart="8dp"/>

            <!-- het going icoon -->
            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image_meetingdetail_going"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_check_black_24dp"
                    android:isToggledOn="@{safeUnbox(meetingViewModel.selectedMeeting.isUserGoing)}"

                    app:layout_constraintEnd_toEndOf="parent"

                    android:layout_marginEnd="8dp"/>


        </android.support.constraint.ConstraintLayout>

        <!-- de datum van de meeting -->
        <android.support.constraint.ConstraintLayout
                android:id="@+id/partial_meetingdetail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/image_meetingdetail_header"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp">

            <!-- de dag van de datum -->
            <TextView
                    android:id="@+id/text_meetingdetail_dateday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    tools:text="23"
                    android:dayInMonth="@{meetingViewModel.selectedMeeting.date}"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <!-- de maand van de datum -->
            <TextView
                    android:id="@+id/textView_meetingdetail_datemonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:text="Dec"
                    android:shortMonthName="@{meetingViewModel.selectedMeeting.date}"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_meetingdetail_dateday"
                    app:layout_constraintBottom_toBottomOf="parent"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

        </android.support.constraint.ConstraintLayout>

        <!-- de titel van de meeting -->
        <TextView
                android:id="@+id/text_meetingdetail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                tools:text="Android app celibration"
                android:text="@{meetingViewModel.selectedMeeting.title}"
                android:textSize="24sp"
                android:textColor="@android:color/black"

                app:layout_constraintTop_toBottomOf="@+id/image_meetingdetail_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/partial_meetingdetail_date"

                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <!-- de subtitel van de meeting -->
        <TextView
                android:id="@+id/text_meetingdetail_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                tools:text="Een android app vieren met een gepaste meeting"
                android:text="@{meetingViewModel.selectedMeeting.subtitle}"

                app:layout_constraintTop_toBottomOf="@+id/text_meetingdetail_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/partial_meetingdetail_date"

                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        <!-- een mooie scheidingslijn tussen de subtitel en beschrijving -->
        <View
                android:id="@+id/divider_meetingdetail_undersubtitle"
                android:layout_width="0dp"
                android:layout_height="1dp"


                android:background="@android:color/darker_gray"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_meetingdetail_subtitle"
                app:layout_constraintEnd_toStartOf="@+id/partial_meetingdetail_date"

                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <!-- de beschrijving scrollview -->
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/partial_meetingdetail_date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_meetingdetail_undersubtitle"

                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

            <android.support.constraint.ConstraintLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <!-- de beschrijving -->
                <TextView
                        android:id="@+id/text_meetingdetail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        tools:text="Niet alleen is Lennert zijn GTI eindelijk af, ook zijn studies zijn bijna afgerond! Dankzij deze android app zou hij namelijk een stap dichter moeten komen naar zijn diploma! als dat maar goed afloopt."
                        android:text="@{meetingViewModel.selectedMeeting.description}"

                        app:layout_constraintTop_toTopOf="parent"/>

                <!-- opslaan in agenda knop -->
                <Button
                        android:id="@+id/button_meetingdetail_agenda"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/ic_add_agenda_pink_18dp"
                        android:drawableEnd="@drawable/ic_add_agenda_pink_18dp"
                        android:text="@string/btn_meeting_agenda"

                        app:layout_constraintTop_toBottomOf="@+id/text_meetingdetail_description"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"/>

                <!-- opslaan in routebeschrijving knop -->
                <Button
                        android:id="@+id/button_meetingdetail_route"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/ic_navigation_pink_18dp"
                        android:drawableEnd="@drawable/ic_navigation_pink_18dp"
                        android:text="@string/btn_meeting_route"

                        app:layout_constraintTop_toBottomOf="@+id/button_meetingdetail_agenda"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"/>

                <!-- ga naar website knop -->
                <Button
                        android:id="@+id/button_meetingdetail_website"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/ic_link_pink_18dp"
                        android:drawableEnd="@drawable/ic_link_pink_18dp"
                        android:text="@string/btn_meeting_website"

                        android:visibility='@{!TextUtils.isEmpty(meetingViewModel.selectedMeeting.website)}'

                        app:layout_constraintTop_toBottomOf="@+id/button_meetingdetail_route"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"/>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</layout>