<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp"

        android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/image_itemmeeting"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintDimensionRatio="H,16:9"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/auto"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop ="15dp"/>
        <TextView
                android:id="@+id/text_itemmeeting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/item_meeting_title"
                android:textSize="24sp"
                android:textColor="@android:color/black"


                app:layout_constraintTop_toBottomOf="@+id/image_itemmeeting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/text_itemmeeting_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/item_meeting_subtitle"
                android:textSize="18sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_itemmeeting_title"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        <TextView
                android:id="@+id/text_itemmeeting_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/item_meeting_location"
                android:drawableLeft="@drawable/ic_location_pink_20dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_itemmeeting_subtitle"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


